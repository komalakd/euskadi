<% if @user.errors.any? %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <h3>Se encontraron <%= @user.errors.count %> errores:</h3>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= notice %></p>
  </div>
<% end %>

<div class="control-group">
  <%= f.label :login, { class: 'control-label' } %>
  <div class="controls">
    <%= f.text_field :login %>
  </div>
</div>
<div class="control-group">
  <%= f.label :email, { class: 'control-label' } %>
  <div class="controls">
    <%= f.text_field :email %>
  </div>
</div>
<div class="control-group">
  <%= f.label :password, { class: 'control-label' } %>
  <div class="controls">
    <%= f.password_field :password, { placeholder: "Conservar clave" } %>
  </div>
</div>
<div class="control-group">
  <%= f.label :password_confirmation, { class: 'control-label' } %>
  <div class="controls">
    <%= f.password_field :password_confirmation, { placeholder: "Conservar clave" } %>
  </div>
</div>
<div class="control-group">
  <%= f.label :name, { class: 'control-label' } %>
  <div class="controls">
    <%= f.text_field :name %>
  </div>
</div>
<div class="control-group">
  <%= f.label :lastname, { class: 'control-label' } %>
  <div class="controls">
    <%= f.text_field :lastname %>
  </div>
</div>

<div class="form-actions">
  <%= f.submit "Guardar", { class: 'btn btn-primary' } %>
  <%= link_to 'Atras', users_path, { class: 'btn' } %>
</div>