<h2>Datos personales</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <p><%= notice %></p>
  </div>
<% end %>

<p>
  <b><%= t('activerecord.attributes.user.login') %>:</b>
  <%= @user.login %>
</p>

<p>
  <b><%= t('activerecord.attributes.user.email') %>:</b>
  <%= @user.email %>
</p>

<p>
  <b><%= t('activerecord.attributes.user.name') %>:</b>
  <%= @user.name %>
</p>

<p>
  <b><%= t('activerecord.attributes.user.lastname') %>:</b>
  <%= @user.lastname %>
</p>


<div class="form-actions">
  <%= link_to 'Editar', edit_user_path(@user), { class: 'btn btn-primary' } %>
  <%= link_to 'Atras', users_path, { class: 'btn' } %>
</div>