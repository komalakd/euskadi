<h2>Listado de Empresas</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= notice %></p>
  </div>
<% end %>

<% if @enterprises.size <= 0 %>

  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p>No hay empresas registradas</p>
  </div>

<% else %>

  <table class="table table-hover table-condensed table-striped table-bordered">
    <tr>
      <th><%= t('activerecord.attributes.enterprise.cuit') %></th>
      <th><%= t('activerecord.attributes.enterprise.name') %></th>
      <th></th>
      <th></th>
      <!-- 
      <th></th> -->
    </tr>

    <% @enterprises.each do |enterprise| %>
      <tr>
        <td><%= enterprise.cuit %></td>
        <td><%= enterprise.name %></td>
        <td><%= link_to 'Historial', enterprise %></td>
        <td><%= link_to 'Editar', edit_enterprise_path(enterprise) %></td>
        <!--
        <td><%= link_to 'Eliminar', enterprise, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la empresa?' } %></td>
        -->
      </tr>
    <% end %>

  </table>

<% end %>

<br />

<%= link_to 'Nueva Empresa', new_enterprise_path, { class: 'btn btn-primary' } %>