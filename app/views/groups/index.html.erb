<h2>Listado de Combinadas</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= notice %></p>
  </div>
<% end %>

<% if @groups.size <= 0 %>

  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p>No hay grupos registrados</p>
  </div>

<% else %>

  <table class="table table-hover table-condensed table-striped table-bordered">
    <tr>
      <th><%= t('activerecord.attributes.group.name') %></th>
      <th><%= t('activerecord.models.room.other').capitalize %></th>
      <th><%= t('activerecord.attributes.group.amount') %></th>
      <th></th>
      <!--
      <th></th>
      <th></th>
      -->
    </tr>

    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.rooms.map{|room| room.number }.join(' - ') %></td>
        <td><%= group.amount %></td>
        <td><%= link_to 'Editar', edit_group_path(group) %></td>
        
        <!--
        <td><%= link_to 'Detalle', group %></td>
        <td><%= link_to 'Eliminar', group, method: :delete, data: { confirm: 'Esta seguro que desea eliminar el grupo?' } %></td>
        -->
      </tr>
    <% end %>
  
  </table>

<% end %>

