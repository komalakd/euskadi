<h2>Mapa de Reservas</h2>
<input id="datepicker" class="" type="text" name="" placeholder="Mostrar desde...">
<%= link_to '+ Nueva Reserva', new_reservation_path, { class: 'btn btn-primary pull-right' } %>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-block">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= alert %></p>
  </div>
<% end %>

<% if Passenger.all.size == 0 %>

  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p>No hay pasajeros registrados, para agregar uno haga click <%= link_to 'aquí', new_passenger_path %>.</p>
  </div>

<% end %>
  
<!-- Mapa de reservas -->
<table id="mapa" class="table table-hover table-condensed table-striped table-bordered">

  <tr>
    <th></th>
    <% @dates.each do |date| %>
    <th><%= date.strftime("%d/%m") %></th>
    <% end %>
  </tr>

  <% @rooms.each do |room| %>
  <tr>
    <td><%= room.number %></td>
    <% @dates.each do |date| %>
    <td id="<%= date.strftime("%Y_%m_%d_") + room.id.to_s %>"></td>
    <% end %>
  </tr>
  <% end %>

</table>

