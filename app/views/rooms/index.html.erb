<h2>Listado de Habitaciones</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p><%= notice %></p>
  </div>
<% end %>

<% if @rooms.size <= 0 %>

  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <p>No hay habitaciones registradas.</p>
  </div>

<% else %>

  <table class="table table-hover table-condensed table-striped table-bordered">
    <tr>
      <th><%= t('activerecord.attributes.room.number') %></th>
      <th><%= t('activerecord.attributes.room.status') %></th>
      <th><%= t('activerecord.attributes.room.room_type_id') %></th>
      <th><%= t('activerecord.attributes.room.group_id') %></th>
      <th></th>
      <!--
      <th></th>
      <th></th>
      -->
    </tr>

    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.active ? 'Disponible' : 'No disponible' %></td>
        <td><%= room.room_type.denomination %></td>
        <td><%= room.group ? room.group.name : '-' %></td>
        <td><%= link_to 'Editar', edit_room_path(room) %></td>
        <!--
        <td><%= link_to 'Detalle', room %></td>
        <td><%= link_to 'Eliminar', room, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la habitacion?' } %></td>
        -->

      </tr>
    <% end %>
  </table>

<% end %>

