<h2>Detalle de la habitaci&oacute;n</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <p><%= notice %></p>
  </div>
<% end %>

<p>
  <strong><%= t('activerecord.attributes.room.number') %>:</strong>
  <%= @room.number %>
</p>

<p>
  <strong><%= t('activerecord.attributes.room.active') %>:</strong>
  <%= @room.active ? 'Activa' : 'Desactiva' %>
</p>

<p>
  <strong><%= t('activerecord.attributes.room.room_type_id') %>:</strong>
  <%= @room.room_type.denomination %>
</p>

<% if @room.group %>
<p>
  <strong><%= t('activerecord.attributes.room.group_id') %>:</strong>
  <%= @room.group.name %>
</p>
<% end %>

<div class="form-actions">
  <%= link_to 'Editar', edit_room_path(@room), { class: 'btn btn-primary' } %>
  <%= link_to 'Atras', rooms_path, { class: 'btn' } %>
</div>