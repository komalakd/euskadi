<%= form_for @room, html: {class: "form-horizontal"} do |f| %>

  <% if @room.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h3>Se encontraron <%= @room.errors.count %> errores:</h2>
      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if notice %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <p><%= notice %></p>
    </div>
  <% end %>

  <!-- <div class="control-group">
    <%= f.label :number, { class: 'control-label' } %>
    <div class="controls">
      <%= f.text_field :number %>
      <%= f.label :number %>
    </div>
  </div> -->

  <div class="control-group">
    <%= f.label :active, { class: 'control-label' } %>
    <div class="controls">
      <%= f.check_box :active %>
    </div>
  </div>

  <!-- <div class="control-group">
    <%= f.label :room_type_id, { class: 'control-label' } %>
    <div class="controls">
      <%= select("room", "room_type_id", RoomType.all.collect{ |rt| [rt.denomination, rt.id] } ) %>
    </div>
  </div> -->

  <div class="form-actions">
    <%= f.submit "Guardar", { class: 'btn btn-primary' } %>
    <%= link_to 'Atras', rooms_path, { class: 'btn' } %>
  </div>

<% end %>