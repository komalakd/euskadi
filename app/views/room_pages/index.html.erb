<h1>Listing room_pages</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Order</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @room_pages.each do |room_page| %>
      <tr>
        <td><%= room_page.page_id %></td>
        <td><%= room_page.order %></td>
        <td><%= link_to 'Show', room_page %></td>
        <td><%= link_to 'Edit', edit_room_page_path(room_page) %></td>
        <td><%= link_to 'Destroy', room_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

