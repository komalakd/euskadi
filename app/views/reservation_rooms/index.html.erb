<h2>Listado de Habitaciones de la Reserva</h2>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <p><%= notice %></p>
  </div>
<% end %>

<% if @reservation_rooms.size <= 0 %>

  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <p>No hay habitaciones registradas para la reserva</p>
  </div>

<% else %>

  <table class="table table-hover table-condensed table-striped table-bordered">
    <tr>
      <th><%= t('activerecord.attributes.reservation_room.reservation_id') %></th>
      <th><%= t('activerecord.attributes.reservation_room.amount') %></th>
      <th><%= t('activerecord.attributes.reservation_room.since') %></th>
      <th><%= t('activerecord.attributes.reservation_room.until') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @reservation_rooms.each do |reservation_room| %>
      <tr>
        <td><%= reservation_room.reservation_id %></td>
        <td><%= reservation_room.amount %></td>
        <td><%= reservation_room.since %></td>
        <td><%= reservation_room.until %></td>
        <td><%= link_to 'Detalle', reservation_room %></td>
        <td><%= link_to 'Editar', edit_reservation_room_path(reservation_room) %></td>
        <td><%= link_to 'Eliminar', reservation_room, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la habitacion de la reserva?' } %></td>
      </tr>
    <% end %>
</table>

<% end %>

<br>

<%= link_to 'Agregar '+t('activerecord.models.room.one').to_s, new_reservation_room_path, { class: 'btn btn-primary' } %>
