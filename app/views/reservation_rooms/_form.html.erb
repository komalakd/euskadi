<%= form_for @reservation_room, html: {class: "form-horizontal"} do |f| %>

  <% if @reservation_room.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h3>Se encontraron <%= @reservation_room.errors.count %> errores:</h3>
      <ul>
      <% @reservation_room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if notice %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <p><%= notice %></p>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :reservation_id, { class: 'control-label' } %>
    <div class="controls">
      <%= select("reservation_room", "reservation_id", @reservations.collect{ |p| [p.id, p.id] }, { include_blank: true } ) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, { class: 'control-label' } %>
    <div class="controls">
      <%= f.text_field :amount %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :since, { class: 'control-label' } %>
    <div class="controls">
      <%= f.text_field :since %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :until, { class: 'control-label' } %>
    <div class="controls">
      <%= f.text_field :until %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Guardar", { class: 'btn btn-primary' } %>
    <%= link_to 'Atras', reservation_rooms_path, { class: 'btn' } %>
  </div>

<% end %>